  V ‚âÉ schreier_graph V Œπ := equiv.refl V

variables (V : Type*) {M : Type*} [has_smul M V] {S : Type*} (Œπ : S ‚Üí M)

instance : has_smul M (schreier_graph V Œπ) :=
{ smul := Œª x y, equiv_schreier_graph $ x ‚Ä¢ (equiv_schreier_graph.symm y)}

/--
